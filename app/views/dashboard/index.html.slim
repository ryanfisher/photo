- content_for :header do
  h1 Dashboard
nav#dashboard-actions
  .dashboard-actions
    .album-choices.dropdown-menu
      span.placeholder Add to an album
      i.fa.fa-caret-down
      .options
        .option Create a new album
    .batch-actions.dropdown-menu
      span.placeholder Batch actions
      i.fa.fa-caret-down
      .options
        .option.delete
          i.fa.fa-trash
          | Delete selected
    .publish-actions.dropdown-menu
      span.placeholder Publish to service
      i.fa.fa-caret-down
      .options
        .option.instagram
          i.fa.fa-instagram
          | Instagram
        .option.flickr
          i.fa.fa-flickr
          | Flickr
        .option.500px
          i.fa.fa-500px
          | 500px
        .option.facebook
          i.fa.fa-facebook-square
          | Facebook
#photo-manager-feed
  .feed-container
    .feed
      .upload-button upload
  = render partial: 'uploader'
